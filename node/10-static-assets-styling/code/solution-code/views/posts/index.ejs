<h1 class="">Posts</h1>

<div class="row">

   <% for(var i = 0; i < posts.length; i++ ) { %>


    <div class="col s12 m6">

        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= posts[i].title %></span>
            <p><%= posts[i].body %></p>
          </div>
          <div class="card-action">
            <a href="/<%= posts[i].id %>">View</a>
            <a href="/<%= posts[i].id %>/edit">edit</a>
          </div>
        </div>

    </div>

   <% } %>

 </div>